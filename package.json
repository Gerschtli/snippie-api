{
  "name": "snippie-api",
  "version": "1.0.0",
  "description": "A simple REST API for storing text snippets by a key.",
  "main": "index.js",
  "scripts": {
    "start":          "supervisor index.js",
    "update":         "npm install && node2nix",
    "create-prod":    "NIX_PATH=${NIX_PATH}:. nixops create -s server/localstate.nixops -d snippie-prod '<server/prod.nix>'",
    "deploy-prod":    "NIX_PATH=${NIX_PATH}:. nixops deploy -s server/localstate.nixops -d snippie-prod",
    "info-prod":      "NIX_PATH=${NIX_PATH}:. nixops info   -s server/localstate.nixops -d snippie-prod",
    "create-staging": "NIX_PATH=${NIX_PATH}:. nixops create -d snippie-staging '<server/staging.nix>'",
    "deploy-staging": "NIX_PATH=${NIX_PATH}:. nixops deploy -d snippie-staging",
    "info-staging":   "NIX_PATH=${NIX_PATH}:. nixops info   -d snippie-staging",
    "create-dev":     "NIX_PATH=${NIX_PATH}:. nixops create -d snippie-dev '<server/dev.nix>'",
    "deploy-dev":     "NIX_PATH=${NIX_PATH}:. nixops deploy -d snippie-dev",
    "info-dev":       "NIX_PATH=${NIX_PATH}:. nixops info   -d snippie-dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gerschtli/snippie-api.git"
  },
  "keywords": [
    "snippie",
    "rest",
    "api",
    "nodejs"
  ],
  "author": "Tobias Happ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Gerschtli/snippie-api/issues"
  },
  "homepage": "https://github.com/Gerschtli/snippie-api#readme",
  "dependencies": {
    "bluebird": "3.5.0",
    "body-parser": "1.17.1",
    "express": "4.15.2",
    "morgan": "1.8.1",
    "redis": "2.7.1",
    "require-dir": "0.3.1",
    "supervisor": "0.12.0"
  }
}
